
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_LayoutPage1.cshtml";
}
@section styles{
    <style>
        #loading {
            display: none;
            width: 100%;
            height: 100%;
            opacity: 0.4;
            filter: alpha(opacity=40);
            background: white;
            position: absolute;
            top: 0;
            left: 0;
            z-index: 2000;
        }
    </style>
    <link href="~/css/fileinput.css" rel="stylesheet" />
    <link href="~/css/paging.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" crossorigin="anonymous">
    <link href="~/css/theme.css" rel="stylesheet" />
}
<form action="/File/file" method="post" enctype="multipart/form-data" style="height:350px">
    <input id="File1" type="file" name="files" class="file" multiple />
    @*<input type="submit" value="上传文件" />*@
</form>

<section class="content">
    @*<div id="loading">
            <img src="~/img/loadingimg/loading3.gif" style="margin-left: 40%; margin-top: 100px; width: 350px; height: 350px;" />
        </div>*@
    <div class="">
        <div class="box-body">

            <div class="box-tools pull-right" style="margin-bottom: 17px;">
                <div class="has-feedback">

                </div>
            </div>
            <div class="row1">
                <table id="ListTb" class="table table-bordered" style="height:150px">
                    <tr>
                        <th>文件名称</th>
                        <th>文件路径</th>
                        <th>日期</th>
                        <th>文件目录</th>
                        <th>操作</th>
                    </tr>
                </table>
                <div class="pagebox" style="height:30px;margin: 0 auto;width: 850px;" id="box"></div>
                <script id="dataList" type="text/x-jquery-tmpl">
                    {{each  Data}}
                    <tr>
                        <td>${filename}</td>
                        <td>${path}</td>
                        <td>${time}</td>
                        <td>${fullname}</td>
                        <td><a href="/File/Download?filename=${filename}" tid="${filename}">下载</a></td>
                    </tr>
                    {{/each}}
                </script>
            </div>
        </div>
    </div>
</section>
@section scripts{
    <script src="~/JS/sortable.js"></script>
    <script src="~/JS/theme.js"></script>
    <script src="~/JS/piexif.js"></script>
    <script src="~/JS/fileinput.js"></script>
    <script src="~/JS/zh.js"></script>
    <script src="~/scripts/jquery.tmpl.js"></script>
    <script src="~/scripts/paging.js"></script>
    <script src="~/JS/common.js"></script>
    <script type="text/javascript" charset="utf-8">
        var dic = {
            queryList: function () {
                _.queryList("/File/FileList", { "PageIndex": 0, "PageSize": 3 });
            }
        }
        $(function () {
            dic.queryList();
        })
    </script>
}

